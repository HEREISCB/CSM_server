# Environment Configuration for CSM TTS Server

# Server Settings
TTS_HOST=0.0.0.0
TTS_PORT=8080
TTS_DEVICE=cuda

# Model Settings
# Leave empty to download from HuggingFace
TTS_MODEL_PATH=

# HuggingFace token (required for model download)
# HUGGINGFACE_TOKEN=hf_xxxxx

# Authentication
TTS_REQUIRE_AUTH=false
# Comma-separated API keys
TTS_API_KEYS=

# Rate Limiting
TTS_MAX_CONCURRENT=10
TTS_MAX_TEXT_LENGTH=4096
TTS_MAX_AUDIO_MS=120000

# Docker Settings
TTS_EXTERNAL_PORT=8080

# Monitoring (when using docker-compose with monitoring profile)
GRAFANA_PASSWORD=admin
